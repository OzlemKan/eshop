@using eshop.Data
@model Products

@{
    ViewData["Title"] = "Details of the product";
}


<!DOCTYPE html>
<html lang="en">
<head style="background-color: #eee4df">
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>
        @ViewData["Title"] <img src="Image/Logo_Isis.png"/>
    </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/eshop.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="css/navbars.css" asp-append-version="true"/>
    <link rel="stylesheet" href="css/carousel.css" asp-append-version="true"/>
    <link rel="stylesheet" href="css/navbars.css" asp-append-version="true"/>
    <link rel="stylesheet" href="css/productpage.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body style="background-color: #eee4df">
<header>
    <partial name="_navbar"/>
</header>
<div class="container d-flex justify-content-center mt-100">
    
    <div class="row">

        @foreach (var item in Model)
        {

            <div class="col-md-3">
                <div class="product-wrapper mb-45 text-center">
                    <div class="product-img">
                        <a href="#" data-abc="true"> <img src="@item.ProductImage" class="img-fluid" alt=""> </a>
                        <span class="text-center"><i class="fa fa-rupee"></i> @item.ProductPrice â‚¬</span>
                        <div class="product-action">
                            <div class="product-action-style">
                                <a asp-action="GetProductCategory" asp-route-id="@item.ProductId"> <i class="bi bi-eye"></i> </a>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>



        }
    </div>
</div>