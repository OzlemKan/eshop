@using eshop.Data
@model Products

@{
    ViewData["Title"] = "Delete Product";
}


<section class="text-center">
  <!-- Background image -->
  <div class="p-5 bg-image" style="
        background-image: url('https://images.pexels.com/photos/4735888/pexels-photo-4735888.jpeg');
        height: 300px;
        "></div>
  <!-- Background image -->
  
<div class="card mx-4 mx-md-5 shadow-5-strong" style="
        margin-top: -100px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        ">
      <div class="card-body py-5 px-md-5">

        <div class="row d-flex justify-content-center">
          <div class="col-lg-8">
            <h2 class="fw-bold mb-5">Confirm Deletion</h2>
            @if (TempData["Error"] != null)
            {
              <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> @TempData["Error"] </span>
            
              </div>
            }
            
              <div class="col mb-4">
                <div>
                  <img id="ProductImagePreview"  style="max-width: 200px; max-height: 200px;" alt="" src=""/>
                </div>
                

                <div class="form-outline">
                  <label asp-for="ProductImage" class="form-label" for="form3Example1">Product Image</label>
                  <input asp-for="ProductImage" type="text" class="form-control"/>

                </div>
              </div>
           
              <div class="row">
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <label asp-for="ProductName" class="form-label" for="form3Example2">Product Name</label>
                    <input asp-for="ProductName" type="text" id="form3Example5" class="form-control" />
                  
                  </div>
                </div>
            

            
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <label asp-for="ProductCategory" class="form-label" for="form3Example3">Product Category</label>
                    <select asp-for="ProductCategory" asp-items="Html.GetEnumSelectList<ProductCategory>()" id="form3Example3" class="form-control"></select>

                  </div>
                </div>
            
                <div class="form-outline mb-4">
                
                  <label asp-for="ProductDescription" class="form-label" for="form3Example2">Description</label>
                  <textarea asp-for="ProductDescription" type="text" id="form3Example4" class="form-control"></textarea>
                    
                
                </div>
            
                <div class="row">
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <label asp-for="ProductPrice" class="form-label" for="form3Example1">Price</label>
                      <input asp-for="ProductPrice" type="text" id="form3Example6" class="form-control" />
                             
                    </div>
                  </div>
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <label asp-for="ProductDelivery" class="form-label" for="form3Example2">Delivery</label>
                      <input asp-for="ProductDelivery" type="text" id="form3Example2" class="form-control" />
                              
                    </div>
                  </div>
                </div>
                
                <a class="btn btn-light" style="background-color: #A48374; color: #EBE3DB" asp-action="DeleteProduct">
                        <input type="hidden" asp-for="ProductId">
                        <input type="submit" value="Confirm"/>
                    </a>
                    <a asp-action="EditProduct" asp-route-id="@Model.ProductId" class="btn btn-light" style="background-color: #A48374; color: #EBE3DB">Edit</a>
                    <a asp-action="Index" class="btn btn-light" style="background-color: #A48374; color: #EBE3DB">Show All</a>

          </div>
        </div>
      </div>
    </div></div>
</section>
