@using eshop.Data.ViewModels
@model eshop.Data.ViewModels.LoginVM

@{
    ViewData["Title"] = "Log in to your account";
}



@if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> @TempData["Error"] </span>

            </div>
        }
<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">
                
                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <form asp-action="Login" style="width: 23rem"> 
                     <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>

                        <div class="form-outline mb-4 form-group">
                            <label asp-for="Email" class="form-label" for="form2Example18">Email address</label>
                            <input asp-for="Email" type="email" id="form2Example18" class="form-control form-control-lg"/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-outline mb-4 form-group">
                            <label asp-for="Password" class="form-label" for="form2Example28">Password</label>
                            <input asp-for="Password" type="password" id="form2Example28" class="form-control form-control-lg" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="pt-1 mb-4">
                            <button class="btn btn-light" style="background-color: #A48374; color: #EBE3DB" type="submit">Login</button>
                        </div>

                        <p class="small mb-5 pb-lg-2"><a class="text-muted" href="#!">Forgot password?</a></p>
                        <p>Don't have an account? <a asp-controller="Account" asp-action="Register" class="link-info">Register here</a></p>

                    </form>

                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="https://images.pexels.com/photos/8105116/pexels-photo-8105116.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>



